name: Java Maven Build and Test

on:
  push:
    branches:
      - main  # Adjust this branch name to your main branch
  pull_request:
    branches:
      - main  # Adjust this branch name to your main branch

jobs:
  build-and-test:
    runs-on: ubuntu-latest  # You can change the runner to your preferred OS (e.g., windows-latest)

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Java JDK
        uses: actions/setup-java@v2
        with:
          java-version: '8'  # Set your desired Java version here

      - name: Build with Maven
        run: mvn clean package

      - name: Run unit tests
        run: mvn test
